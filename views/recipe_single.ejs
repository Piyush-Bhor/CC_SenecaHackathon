<%- include('includes/header') %>
<link rel="stylesheet" type="text/css" href="/css/recipe.css">
<%- include('includes/nav') %>

<main>
    <h1><%= recipe.title %></h1>
    <img src="<%= recipe.image %>" alt="food" />
    <!--get ingredients, description-->
    
    <table>
        <!--get the ingredient name, original (amount of ingredient)-->
        <!--for example, 1 teaspoon vanilla-->
        <tr>
            <th>Instructions</th>
            <th>Ingredient</th>
        </tr>
    </table>

    <!--link to source url-->
    <a href="<%= recipe.sourceUrl %>" alt="original recipe"><button>Read More</button></a>
</main>

<%- include('includes/footer') %>